


/**
 * class to hold the emloyee list and print when it called and add a new emlyee
 * @author Zahi Masarwa

 */
public class EmployeesList{
	
	private Employee [] employeeList;		//array to hold the employee
	private int count=0;		//to count on where to add the new employee
	/**
	 * 
	 */
	public EmployeesList() {
		employeeList=new Employee[11];
	}
	
	
	public void addEmloyee(int rank,String fName,String lName) {
		Employee newEmp=new Employee(rank,fName,lName);
		employeeList[count]=newEmp;
		count++;
	}
	
	
	public void displayList() {
		System.out.printf("[%s]\t%s\n","Rank","Emloyee Name");
		for (int i=0;i<employeeList.length;i++) {
			System.out.printf("%d\t%s\n",employeeList[i].getRank(),employeeList[i].getName());
		}
	}
	
	
	
	public void promate(int rank) {
		if (rank>0) {
			Employee tempemp=new Employee();
			tempemp=employeeList[rank-1];
			employeeList[rank-1]=employeeList[rank];
			employeeList[rank]=tempemp;
			employeeList[rank-1].setRank(rank-1);
			employeeList[rank].setRank(rank);
		}else {
			System.out.printf("Rank should be bigger than 0");
		}
		
		
	}
	
	
	
	

}
