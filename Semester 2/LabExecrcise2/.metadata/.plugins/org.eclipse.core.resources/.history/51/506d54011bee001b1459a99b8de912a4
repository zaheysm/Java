import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.io.IOException;
import java.io.PrintWriter;
import java.net.Socket;

public class Clinet {

	public static void main(String[] args) {
		
		DataInputStream input=null;
		PrintWriter output=null;
		Socket clinet=null;
		try {
			clinet=new Socket("127.0.0.1",1254);
			output= new PrintWriter(clinet.getOutputStream());
			input= new DataInputStream(clinet.getInputStream());
		}catch(IOException e) {
			System.out.println(e);
		}
		try {
		output.write("hello server ");
		output.write("I am writing to you ");
		output.write("can you hear me");
		}catch(IOException e) {
			System.out.println("IOException "+e);
		}
		
		try {
			output.close();
			input.close();
			clinet.close();
		}catch(IOException io) {
			System.out.println(io);
		}
		

	}

}
